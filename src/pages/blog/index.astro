---;
import Scroll from '../../layouts/Scroll.astro';
import Post from '../../components/Post.astro';

const posts = await Astro.glob('./*md');
posts.reverse();
---

<Scroll title="The Good Boi - Blog">

    <h1 class="title pop">Blog</h1>
    What is that guy up to?
    <p class="text-center">
        <span class="text-light   mx-3">general</span>
        <span class="text-info    mx-3">website</span>
        <span class="text-warning mx-3">venting</span>
    </p>
    <hr>

    {posts.map((post) => (
        <Post
            title={post.frontmatter.title}
            date={post.frontmatter.date}
            id={post.frontmatter.id}
            type={post.frontmatter.type}
        >
        </Post>
    ))}

    <br>

</Scroll>