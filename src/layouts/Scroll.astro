---
import Nav from '../components/Nav.astro';
import Head from './Head.astro';
import Body from './Body.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <Head></Head>
    <head>
        <title>{title}</title>
    </head>
	<Body>
        <Nav></Nav>
        
        <div class="position-absolute start-50 translate-middle-x fs-4 text-justify w-read-1000" style="margin-top: 1vw;" id="scrollDiv">
            <slot></slot>
        </div>
	</Body>
</html>
