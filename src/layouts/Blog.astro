---
import Nav from '../components/Nav.astro';
import Head from './Head.astro';
import Body from './Body.astro';

export interface Props {
	title: string;
}

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<Head></Head>
    <head>
        <title>TheGoodBoi - Blog</title>
    </head>
	<Body>
        <Nav></Nav>
        
        <div class="text-justify text-md-start position-absolute start-50 translate-middle-x w-read-1000" style="margin-top: 1vw;" id="scrollDiv">
            <h1 class="title pop">{frontmatter.title}</h1>
            <p class="text-muted fst-italic mb-0">{frontmatter.date}</p>
            <hr>
            
            <slot></slot>
        </div>
        
	</Body>
</html>
